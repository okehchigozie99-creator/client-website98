<button onclick="addToCart(${i})">Pay Now</button>
</div>
</div>`
})

/* CART FUNCTIONS */
function addToCart(i){
let size=document.getElementById("size"+i).value;
let qty=parseInt(document.getElementById("qty"+i).value);
if(size==="Size"){alert("Select size");return;}
cart.push({...products[i],size,qty});
updateCart();
}

function updateCart(){
let items=document.getElementById("cartItems");items.innerHTML="";
let total=0;
cart.forEach(item=>{
total+=item.price*item.qty;
items.innerHTML+=`<div class="cart-item">${item.name}<br>Size:${item.size}<br>Qty:${item.qty}<br>â‚¦${item.price*item.qty}</div>`})
document.getElementById("total").innerText=total;
document.getElementById("count").innerText=cart.length;
}

function toggleCart(){document.getElementById("cart").classList.toggle("active");}

/* HERO SLIDER */
let slides=document.querySelectorAll(".slide");let index=0;
setInterval(()=>{slides[index].classList.remove("active");index=(index+1)%slides.length;slides[index].classList.add("active");},4000);

/* WHATSAPP ORDER */
function sendWhatsApp(){
if(cart.length===0){alert("Cart empty");return;}
let msg="ORDER DETAILS:%0A";let total=0;
cart.forEach(item=>{msg+=`${item.name} Size:${item.size} Qty:${item.qty}%0A`;total+=item.price*item.qty;})
msg+=`Total = â‚¦${total}`;
window.open(`https://wa.me/234XXXXXXXXXX?text=${msg}`);
}

/* CONTACT FORM */
document.getElementById("contactForm").addEventListener("submit",function(e){
e.preventDefault();
let name=document.getElementById("contactName").value;
let email=document.getElementById("contactEmail").value;
let msg=document.getElementById("contactMsg").value;
window.open(`mailto:youremail@example.com?subject=Contact from ${name}&body=Email: ${email}%0A%0AMessage:%0A${msg}`);
alert("Your message is ready to send via your email client.");
this.reset();
});
